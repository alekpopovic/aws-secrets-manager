# ==================================================================================== #
# HELPERS
# ==================================================================================== #

## help: print this help message
.PHONY: help
help:
	@echo 'Usage:'
	@sed -n 's/^##//p' ${MAKEFILE_LIST} | column -t -s ':' |  sed -e 's/^/ /'


# ==================================================================================== #
# DEVELOPMENT
# ==================================================================================== #

## bundle: install dependencies
.PHONY: bundle
bundle:
	bundle install

## terminal: go to the interactive terminal
.PHONY: console
console:
	./bin/console

# ==================================================================================== #
# TESTING
# ==================================================================================== #

## test: run tests
.PHONY: test
test:
	rspec

# ==================================================================================== #
# LINTING
# ==================================================================================== #

## lint: run linter
.PHONY: lint
lint:
	rubocop

# ==================================================================================== #
# Release
# ==================================================================================== #

## rel: run release
.PHONY: rel
rel:
	rake release
